<h2 class="text-lg font-semibold mb-3">Edit Workout</h2>
<form method="post" action="/workouts/<%= workout.id %>" class="bg-white rounded shadow-sm border p-4 max-w-md space-y-3">
  <div>
    <label class="block text-sm">Date</label>
    <input type="date" name="date" value="<%= new Date(workout.date).toISOString().slice(0,10) %>" required class="mt-1 w-full border rounded px-3 py-2" />
  </div>
  <div>
    <label class="block text-sm">Type</label>
    <input type="text" name="type" value="<%= workout.type %>" required class="mt-1 w-full border rounded px-3 py-2" />
  </div>
  <div>
    <label class="block text-sm">Duration (minutes)</label>
    <input type="number" min="1" name="duration" value="<%= workout.duration %>" required class="mt-1 w-full border rounded px-3 py-2" />
  </div>
  <div>
    <label class="block text-sm">Notes</label>
    <textarea name="notes" rows="3" class="mt-1 w-full border rounded px-3 py-2"><%= workout.notes || '' %></textarea>
  </div>
  <div class="pt-2 flex gap-2">
    <button class="px-4 py-2 rounded bg-blue-600 text-white">Update</button>
    <a href="/" class="px-4 py-2 rounded border">Cancel</a>
  </div>
  </form>

